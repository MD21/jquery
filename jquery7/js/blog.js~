$(document).ready(function(){
  var $next_time = false;
  console.log($("#blog h3").length); 
  $("#blog h3").click(function(){
    if($next_time)
    {
       console.log($("#blog p.excerpt").hide().slideUp());
       $(this).next("p.excerpt").show().slideDown();
    }
    else
      $next_time = $(this).next("p.excerpt").show().slideDown();
  });
});


  
   

